{
	"compilerOptions": {
		"target": "ESNext",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"baseUrl": "./src/",
		"paths": {
			"assets/*": ["assets/*"],
			"components/*": ["components/*"],
			"core/*": ["core/*"],
			"pages/*": ["pages/*"],
			"stores/*": ["stores/*"],
			"styles/*": ["styles/*"]
		},
		"types": [
			"pinia-plugin-persist"
		]
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
	"exclude": ["node_modules"]
}
